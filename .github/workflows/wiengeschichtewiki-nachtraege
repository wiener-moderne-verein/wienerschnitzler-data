name: Wiengeschichtewiki-Nachtr√§ge beziehen

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  run-script:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python 3.x
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: |
          pip install lxml requests

      - name: Run update_wiengeschichtewiki script
        working-directory: python-scripts
        run: python3 update_wiengeschichtewiki.py

      - name: Verify output file
        run: ls -la ../data/indices/wiengeschichtewiki-nachtraege.xml
